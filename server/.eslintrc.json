{
  "env": {
    "node": true,
    "commonjs": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "linebreak-style": ["off"],
    "no-underscore-dangle": ["off"],
    "prettier/prettier": ["error"]
  },
  "overrides": [
    {
      "files": ["test/**/**.test.js", "test/**.js"],
      "rules": {
        "no-undef": "off",
        "no-unused-expressions": "off",
        "no-console": "off",
        "consistent-return": "off"
      }
    },
    {
      "files": ["./**.js"],
      "rules": {}
    }
  ]
}
